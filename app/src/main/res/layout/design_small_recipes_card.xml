<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:scaleX="1"
    android:scaleY="1"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/smallrec_upmostLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/design_recipe_header"
            android:fontFamily="@font/urbanist_light"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Text"
            android:textColor="#F3F3F3"
            android:textSize="14sp"
            android:textStyle="bold">

        </TextView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearlayoutMarginReducerSmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        android:paddingLeft="9dp"
        android:paddingTop="6dp"
        android:paddingRight="9dp"
        android:paddingBottom="6dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <ImageView
                    android:id="@+id/recipeCardSmall_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@drawable/blank_placeholder"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/recipestxtSmall_Likes"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:background="@drawable/design_yellow_chip_curved"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:text=" 1234"
                    android:textAlignment="center"
                    android:textColor="#F3F3F3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/recipeCardSmall_hotprogressbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:indeterminateTint="#AAAAAA" />

            </androidx.cardview.widget.CardView>

        </FrameLayout>


        <TextView
            android:id="@+id/recipesCardSmallRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/urbanist_light"
            android:maxLines="1"
            android:minLines="1"
            android:text="Default Recipe New"
            android:textColor="#404040"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recipesCardSmallRecipeMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="1"
                android:text="120 Minutes"
                android:textColor="#8E8E8E"
                android:textSize="10sp"></TextView>

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recipesCardSmallRecipeServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="1"
                android:text="5 Servings"
                android:textColor="#8E8E8E"
                android:textSize="10sp"></TextView>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>