<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:scaleX="1"
    android:scaleY="1"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="top">

        <TextView
            android:id="@+id/recomp_labelOnTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/design_recipe_header"
            android:fontFamily="@font/urbanist_light"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Recipe"
            android:textColor="#F3F3F3"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/recomp_MarginReducer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recomp_textSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/gradient_recipe_header"
                android:drawableEnd="@drawable/ic_arrow_right_thin"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text="3 Steps"
                android:textAlignment="center"
                android:textColor="#F3F3F3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recomp_textLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:background="@drawable/design_yellow_chip"
                android:drawableStart="@drawable/ic_like_icon"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:text=" 1234"
                android:textAlignment="center"
                android:textColor="#F3F3F3"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>


        <TextView
            android:id="@+id/recomp_recipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/urbanist_light"
            android:maxLines="1"
            android:minLines="1"
            android:text="Default Recipe New"
            android:textColor="#404040"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recomp_recipeDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="1"
                android:text="120 Minutes"
                android:textColor="#8E8E8E"
                android:textSize="12sp"></TextView>

            <View
                android:id="@+id/view4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/recomp_recipeServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_regular"
                android:maxLines="1"
                android:text="5 Servings"
                android:textColor="#8E8E8E"
                android:textSize="12sp"></TextView>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>


        <View
            android:id="@+id/view91"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#B3B3B3" />


        <TextView
            android:id="@+id/recomp_recipeCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold_main"
            android:text="Category"
            android:textColor="#FB8A00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recomp_tagsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_bold_main"
            android:maxLines="1"
            android:text="#tag #tag-2 #tag-3 "
            android:textColor="@color/offical_cookaholics_yellow_1"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/recomp_card_highlighted_frame"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|right"
        android:visibility="invisible">

        <TextView
            android:id="@+id/recomp_highlighted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/design_recipe_highlighted_footer"
            android:drawableStart="@drawable/ic_circle_star"
            android:fontFamily="@font/urbanist_light"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="Highlighted Recipe"
            android:textColor="#F3F3F3"
            android:textSize="12sp"
            android:textStyle="bold">

        </TextView>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>